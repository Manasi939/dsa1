#include <iostream>

using namespace std;
int sum(int n)
{
    if(n==0)
    {
        return 0;
    }
    int prev=n + sum(n-1);
    return prev;
}
int main()
{
    int a;
    cin>>a;
    cout<<sum(a);
   
    
}
